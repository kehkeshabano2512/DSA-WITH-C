// deletion in array.
#include<iostream>
using namespace std;
int main()
{
	int a[20],size,pos,i;
	cout<<"enter the size of array:"<<"\n";
	cin>>size;
	cout<<"enter Array elements:"<<"\n";
	for(int i=0;i<size;i++){
		cin>>a[i];
	}
     //input  position where you wan to delete an elements
     cout<<"enter the position: ";
     cin>>pos;
     for(i=pos;i<size;i++)
     {
     	a[i]=a[i+1];
     	
	 }
	 size--;
	for(int i=0;i<size;i++)
	{
		cout<<a[i]<<"\n";
	}
	return 0;
}
